#include <stdio.h>
void main() {
    int i,len=0;
    char str[20];
    printf("enter a word :\n");
    scanf("%s",&str);
    while(str[i]!='\0')
    {
        i++;
        len++;
    }
  
    printf("The reversed string is :");
    for(int j = len-1;j>=0;j--)
   
    {
        printf("%c",str[j]);
    }
    
}
